<%- include ('../../partials/header.ejs') %>

<%- include ('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <h3>Todas as Categorias</h3>
        <hr>
        <a href="/admin/categories/new" class="btn btn-primary mb-3">Nova Categoria</a>
        <table class="table table-bordered">
            <thead>
                <tr>    
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>     
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>
                        <td>
                            <a href="/admin/categories/edit/<%- category.id%>"  class="btn btn-success">Editar</a>
                            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelection(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button class="btn btn-danger"> Excluir</button>
                            </form>
                        </td>
                    </tr>
                    <% })%>
            </tbody>
        </table>
    </div>
</body>

<%- include ('../../partials/footer.ejs')  %>

<script>
    function confirmDelection(event, form){
        event.preventDefault();
        var decision = confirm("Você realmente deseja apagar o Título?")
        if(decision){
            form.submit();
        }
    }
</script>