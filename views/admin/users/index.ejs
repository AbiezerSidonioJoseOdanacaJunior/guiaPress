<%- include ('../../partials/header.ejs') %>

<%- include ('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <h3>Todas os usuários</h3>
        <hr>
        <a href="/admin/users/create" class="btn btn-primary mb-3">Novo Usuário</a>
        <table class="table table-bordered">
            <thead>
                <tr>    
                    <th>ID</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>     
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td>Eidtar e Excluir</td>
                    </tr>
                    <% })%>
            </tbody>
        </table>
    </div>
</body>

